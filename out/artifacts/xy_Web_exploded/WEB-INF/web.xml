        <servlet-name>LogIn</servlet-name>
        <url-pattern>/LogIn</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SendEmail</servlet-name>
        <servlet-class>com.xiaoyou.servlet.SendEmail</servlet-class>
    </servlet>
